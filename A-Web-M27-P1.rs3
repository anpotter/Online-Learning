    <segment id="5" parent="10" relname="list"> attractiveness,</segment>
    <segment id="6" parent="10" relname="list"> effectiveness,</segment>
    <segment id="7" parent="10" relname="list"> learnability,</segment>
    <segment id="8" parent="10" relname="list"> memorability</segment>
    <segment id="9" parent="10" relname="list"> and user-friendly.</segment>
